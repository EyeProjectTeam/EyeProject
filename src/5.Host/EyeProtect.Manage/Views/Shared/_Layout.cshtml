@{
    ViewData["Title"] = "Eye后台管理";
}
<link rel="stylesheet" type="text/css" href="~/layui/css/layui.css" />
<link rel="stylesheet" type="text/css" href="~/css/admin.css" />

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/layui/layui.js" type="text/javascript" charset="utf-8"></script>
<script src="~/js/common.js" type="text/javascript" charset="utf-8"></script>
<script src="~/js/main.js" type="text/javascript" charset="utf-8"></script>

<div class="main-layout" id='main-layout'>
    <!--侧边栏-->
    <div class="main-layout-side">
        <div style="font-size: 32px;color: white;margin-left: 10px;">
            爱眼科普器
        </div>
        <ul class="layui-nav layui-nav-tree" lay-filter="leftNav">
            <li class="layui-nav-item">
                <a href="~/system/accountList"><i class="iconfont">&#xe604;</i>账号管理</a>
            </li>
        </ul>
    </div>
    <!--右侧内容-->
    <div class="main-layout-container">
        <!--头部-->
        <div class="main-layout-header">
            <div class="menu-btn" id="hideBtn">
                <a href="javascript:;">
                    <span class="iconfont">&#xe60e;</span>
                </a>
            </div>
            <ul class="layui-nav" lay-filter="rightNav">
                <li class="layui-nav-item">
                    <a href="javascript:;" data-url="admin-info.html" data-id='5' data-text="个人信息">超级管理员</a>
                </li>
                <li class="layui-nav-item"><a href="javascript:;">退出</a></li>
            </ul>
        </div>
        <!--主体内容-->
        <div class="main-layout-body">
            <!--tab 切换-->
            <div class="layui-tab layui-tab-brief main-layout-tab" lay-filter="tab" lay-allowClose="true">
                <ul class="layui-tab-title">
                    <li class="layui-this welcome">@ViewData["Tabs"]</li>
                </ul>
                <div class="layui-tab-content">
                    <div class="layui-tab-item layui-show" style="background: #f5f5f5;">
                        <!--1-->
                        @*<iframe src="welcome.html" width="100%" height="100%" name="iframe" scrolling="auto" class="iframe" framborder="0"></iframe>*@
                        @RenderBody()
                        <!--1end-->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--遮罩-->
    <div class="main-mask">
    </div>
</div>
<script type="text/javascript">
    var scope = {
        link: './welcome.html'
    }
</script>

@RenderSection("Scripts", required: false)